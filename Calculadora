 <script> 
       documento.getElementById("formularioCiclista").adEventListener("submit", función (evento){       
  evento.preventePor defecto();  

                    const nombreCiclista = document.getElementById("nombreCiclista").value;        
 const paisOrigenSeleccionado = document.getElementById("paisOrigin").valor; 
 const puntosPCS2023 = parseInt (document.getElementById("puntosPCS2023").valor) |^^ 0; 
 const puntosPCS2022 = parseInt (document.getElementById("puntosPCS2022").valor) || 0; 
 const promedioPCS = (puntosPCS2023 + puntosPCS2022) / 2; 
 const lookSeleccionado = document.getElementById("look").valor; 
 const personalidadSeleccionada = document.getElementById("personalidad").valor; 

 let lookCoolCumplido = lookSeleccionado !== "ninguna"; 
                    let paisNoExcluido = paisOrigenSeleccionado !== "francia_italia_espana_benelux";        
                    let personalidadAdecuada = personalidadSeleccionada !== "ninguna";        

                    let resultado = "Resumen de la Evaluación:\n";        
                    resultado += "Nombre del Ciclista: " + nombreCiclista + "\n";        
                    resultado += "País de Origen: " + paisOrigenSeleccionado + "\n";        
                    resultado += "Puntos PCS 2023: " + puntosPCS2023 + "\n";        
                    resultado += "Puntos PCS 2022: " + puntosPCS2022 + "\n";        
                    resultado += "Promedio PCS: " + promedioPCS + "\n";        
                    resultado += "Look Seleccionado: " + lookSeleccionado + "\n";        
                    resultado += "Personalidad Seleccionada: " + personalidadSeleccionada + "\n";        

 si (puntosPCS2023 <= 500 & promedioPCS < 300 & lookCoolCumplido & (paisNoExcluido |^ personalidadAdecuada)) { 
                       resultado += "\n¡El ciclista cumple con los criterios de la Porra Ciclista Subestimado Molón 2024!";       
      } más {      
                       resultado += "\nEl ciclista no cumple con los criterios mínimos requeridos.";       
                }    

      alerta (resultado);      
            });    
 </script> 
